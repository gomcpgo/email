# Email account settings
EMAIL_ADDRESS=user@gmail.com
EMAIL_APP_PASSWORD=xxxxxxxxxx
EMAIL_PROVIDER=gmail              # gmail, outlook, or custom

# IMAP settings (auto-configured for gmail/outlook)
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993

# SMTP settings (auto-configured for gmail/outlook) 
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Storage settings
FILES_ROOT=/tmp/email-mcp         # Root for drafts and cache
EMAIL_CACHE_MAX_SIZE=10485760     # 10MB cache limit
EMAIL_MAX_ATTACHMENT_SIZE=26214400 # 25MB max attachment
EMAIL_TIMEOUT_SECONDS=120          # 2 minute timeout for operations